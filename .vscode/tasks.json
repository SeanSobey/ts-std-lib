{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "windows": {
        "command": "nvm use $(Get-Content .nvmrc)",
      },
      "linux":{
        "command": "cat .nvmrc | nvm use"
      },
      "osx":{
        "command": "cat .nvmrc | nvm use"
      },
      "label": "nvm",
    },
    {
      "type": "npm",
      "script": "build",
      "dependsOn": "nvm",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc"
    },
    {
      "type": "npm",
      "script": "test",
      "dependsOn": "nvm",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "clean",
      "dependsOn": "nvm"
    },
    {
      "type": "npm",
      "script": "lint",
      "dependsOn": "nvm",
      "problemMatcher": "$eslint-stylish"
    },
    {
      "type": "npm",
      "script": "watch-build",
      "dependsOn": "nvm",
      "group": "build",
      "isBackground": true,
      "problemMatcher": "$tsc"
    },
    {
      "type": "npm",
      "script": "watch-clean",
      "dependsOn": "nvm",
      "isBackground": true
    },
    {
      "type": "npm",
      "script": "watch-test",
      "dependsOn": "nvm",
      "isBackground": true,
      "group": "test"
    },
    {
      "type": "npm",
      "script": "watch-lint",
      "dependsOn": "nvm",
      "isBackground": true,
      "problemMatcher": "$eslint-stylish"
    }
  ]
}