{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceFolder}\\dist\\server.js",
      "runtimeArgs": [
        "--inspect-brk=33295",
        "--nolazy"
      ],
      "timeout": 60000,
      "port": 33295,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceRoot}/dist/**/*.js"
      ],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": ""
      }
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules\\mocha\\bin\\mocha",
      "runtimeArgs": [
        "--inspect-brk=27562",
        "--nolazy"
      ],
      "args": [
        "${workspaceRoot}\\dist\\**\\*.spec.js"
      ],
      "timeout": 50000,
      "port": 27562,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceRoot}/dist/**/*.js"
      ],
      "env": {
        "NODE_ENV": "test",
        "DEBUG": ""
      }
    }
  ]
}